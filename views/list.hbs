<h1>FREIGHT BROKER RATINGS</h1>
{{#if isLoggedIn}}
<a class="btn btn-primary" href='/myratings'>My Ratings</a>
<a class="btn btn-danger" href="/logout">Logout</a>
{{/if}}

{{#unless isLoggedIn}}
<a class="btn btn-primary" href="/login">Login/Register</a>
{{/unless}}
<a class="btn btn-secondary" href="/companies">Companies</a>
{{#if user.isAdmin}}
<a class="btn btn-secondary" href="/users">Users</a>
{{/if}}
<br>
<br>
<br>
<table class="table table-bordered table-hover table-sm">
    <tr>
    <th>Company Name </th> 
    <th>Broker's Name</th>
    <th>Rating</th>
    <th>Comment</th>
    <th>Rated By</th>
    <th>Rated Date</th>
    </tr>
{{#each ratings}}
<tr> 
<td>{{this.company.companyName}}</td>
<td>{{this.firstName}}</td>
 <td> {{this.rating}}</td>
 <td> {{this.comment}}</td>
 <td>{{this.user.username}}</td>
 <td>{{this.createdAt}}</td>
{{!-- <td style = "text-align: center;"> <a class="btn btn-primary" href="/edit/{{ this.id }}">Edit</a> <a class="btn btn-danger" href = "/delete/{{ this.id }}">Delete</a></td> --}}

{{/each}}

</table>

