<h1> 
    {{#if rating }} Edit Rating
    {{else}} Add Rating
    {{/if}}
</h1>

<form action = "/update" method="POST">
<div class="form-group">
    <label for="exampleFormControlSelect1">Company</label>
    <select class="form-control" name="companyId" id="exampleFormControlSelect1">
      {{#each companies}}
      <option value="{{this.id}}">{{this.companyName}}</option>
      {{/each}}
    </select>
    
  </div>
<br>
Broker's First Name: <input type = "text" name="firstName" value="{{ rating.firstName }}" />
<br>
Broker's Last Name: <input type = "text" name="lastName" value="{{ rating.lastName }}" />
<br>
Load Number: <input type = "text" name="loadNumber" value="{{ rating.loadNumber }}" />
<br>
Comment: <input type = "text" name="comment" value="{{ rating.comment }}" />
<br>
<div class="form-group">
    <label for="exampleFormControlSelect1">Rating</label>
    <select class="form-control" name="rating" id="exampleFormControlSelect1">
      <option value="1">1 </option>
      <option value="2">2</option>
      <option value="3"> 3</option>
      <option value="4">4</option>
      <option value="5">5</option>
    </select>
  </div>
<input type = "hidden" name="id" value="{{ rating.id }}">
<br>
<button class="btn btn-primary" type="submit">Submit</button>
</form>
<br>
<a class="btn btn-secondary" href="/">Rating List</a>